{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}

<form method="post" class="container form-event my-4">
    {% if error %}
        <div class="error">
            Tu t'es trompé espèce de (lapin) crétin, bisous
        </div>
    {% endif %}

    <div class="my-2">
        <input type="text" name="_username" value="{{ lastUsername }}" placeholder="Nom d'utilisateur">
    </div>

    <div class="my-2">
        <input type="password" name="_password" placeholder="Mot de passe">
    </div>

    <input type="hidden" name="_target_path" value="/events">

    <button type="submit" class="btn btn-primary my-2">Connexion</button>
</form>

{% endblock %}